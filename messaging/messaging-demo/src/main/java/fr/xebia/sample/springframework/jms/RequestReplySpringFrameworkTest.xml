<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:lang="http://www.springframework.org/schema/lang" xmlns:amq="http://activemq.org/config/1.0"
   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/lang http://www.springframework.org/schema/lang/spring-lang-2.0.xsd
                           http://activemq.org/config/1.0 http://activemq.apache.org/snapshot-schema/activemq-core-5.0-SNAPSHOT.xsd">


   <!-- CLIENT SIDE COMPONENT -->
   <bean id="requestReplyClientInvoker" class="fr.xebia.sample.springframework.jms.RequestReplyClientInvoker">
      <property name="connectionFactory" ref="connectionFactory" />
      <property name="requestDestination" ref="requestDestination" />
      <property name="replyToDestination" ref="resplyToDestination" />
   </bean>


   <!-- SERVER SIDE COMPONENTS -->
   <bean id="requestReplyMessageListener" class="fr.xebia.sample.springframework.jms.RequestReplyServerMessageListener" />

   <bean id="listenerContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
      <property name="maxConcurrentConsumers" value="5" />
      <property name="concurrentConsumers" value="1" />
      <property name="connectionFactory" ref="connectionFactory" />
      <property name="destination" ref="requestDestination" />
      <property name="messageListener" ref="requestReplyMessageListener" />
   </bean>

   <!-- ACTIVE MQ COMPONENTS -->
   <amq:broker useJmx="false" persistent="false">
      <amq:transportConnectors>
         <amq:transportConnector uri="tcp://localhost:0" />
      </amq:transportConnectors>
   </amq:broker>
   <amq:queue id="requestDestination" physicalName="requestDestination" />
   <amq:queue id="resplyToDestination" physicalName="resplyToDestination" />
   <amq:connectionFactory id="activeMqConnectionFactory" brokerURL="vm://localhost?broker.persistent=false&amp;broker.useJmx=false" />
   <!-- Wrap in a pool to avoid creating a connection per send -->
   <bean id="connectionFactory" class="org.springframework.jms.connection.SingleConnectionFactory">
      <property name="targetConnectionFactory" ref="activeMqConnectionFactory" />
   </bean>
</beans>